<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record model="ir.ui.view" id="unidades_unidades_form_view">
        <field name="name">Unidades</field>
        <field name="model">unidades.unidades</field>
        <field name="arch" type="xml">
            <form string="Unidades Form">
            	<header>
    	        	<field name="float_status" widget="statusbar" statusbar_visible="available,on_route,filling_water,filling_diesel,canceled"/>
    	            <button name="available_progressbar" string="Disponible" type="object" attrs="{'invisible': [('float_status', '=', 'available')]}"/>
    	            <button name="on_route_progressbar" string="En ruta" type="object" class="oe_highlight" attrs="{'invisible': [('float_status','!=','available')]}"/>
    	            <button name="canceled_progressbar" string="Cancelado" type="object" class="oe_highlight" attrs="{'invisible': [('float_status','=','on_route')]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="float_id"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="float_ids"/>
                            <field name="driver_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

	<record model="ir.ui.view" id="unidades_unidades_tree_view">
        <field name="name">Unidades</field>
        <field name="model">unidades.unidades</field>
        <field name="arch" type="xml">
            <tree string="Unidades Tree">
                <field name="float_id"/>
                <field name="employee_id"/>
                <field name="float_ids"/>
                <field name="driver_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="unidades_unidades_list_action_window">
        <field name="name">Unidades</field>
        <field name="res_model">unidades.unidades</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="unidades_unidades_menu"
              name="Unidades"
              parent="h2o_h2o_menu_root"
              action="unidades_unidades_list_action_window"/>
</odoo>