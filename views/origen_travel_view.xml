<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<record model="ir.ui.view" id="origen_travel_form_view">
        <field name="name">Origen del viaje</field>
        <field name="model">origen.travel</field>
        <field name="arch" type="xml">
            <form string="Origen Del Viaje Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="street_origen"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="origen_travel_tree_view">
        <field name="name">Origen del viaje</field>
        <field name="model">origen.travel</field>
        <field name="arch" type="xml">
            <tree string="Origen Del Viaje Tree">
                <field name="name"/>
                <field name="street_origen"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="origen_travel_list_action_window">
        <field name="name">Origen del viaje</field>
        <field name="res_model">origen.travel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="origen_travel_menu" name="Origen del viaje"
              parent="h2o_h2o_menu_root"
              action="origen_travel_list_action_window"/>
    
</odoo>