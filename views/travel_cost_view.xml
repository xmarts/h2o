<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<record model="ir.ui.view" id="travel_cost_form_view">
        <field name="name">Costos adicionales</field>
        <field name="model">travel.cost</field>
        <field name="arch" type="xml">
            <form string="Costos Adicionales Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="travel_cost_tree_view">
        <field name="name">Costos adicionales</field>
        <field name="model">travel.cost</field>
        <field name="arch" type="xml">
            <tree string="Costos Adicionales Tree">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="travel_cost_list_action_window">
        <field name="name">Costos adicionales</field>
        <field name="res_model">travel.cost</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="travel_cost_menu" name="Costos adicionales"
              parent="h2o_h2o_menu_root"
              action="travel_cost_list_action_window"/>
    
</odoo>