<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<record model="ir.ui.view" id="employee_employee_form_view">
        <field name="name">Empleados</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
            <form string="Employee Form">
                <sheet>
                    <group>
                        <group>
                            <field name="id_employee"/>
                        </group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="employee_employee_tree_view">
        <field name="name">Empleados</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
            <tree string="Employee Tree">
                <field name="id_employee"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="employee_employee_list_action_window">
        <field name="name">Empleados</field>
        <field name="res_model">employee.employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="employee_employee_menu"
              name="Empleados"
              parent="h2o_h2o_menu_root"
              action="employee_employee_list_action_window"/>
    
</odoo>