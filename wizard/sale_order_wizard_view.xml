<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_wizard_form_view">
            <field name="name">sale.order.wizard.form.view</field>
            <field name="model">sale.order.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="details"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="canceled_travel" string="Enviar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="sale_order_wizard_action_window">
            <field name="name">Ventas</field>
            <field name="res_model">sale.order.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>